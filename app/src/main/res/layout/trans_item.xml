<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="8dp"
    android:foreground="?android:selectableItemBackground"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction date :"
            android:layout_margin="20dp"
            android:textSize="18sp"
            android:fontFamily="@font/amaranth"
            android:id="@+id/transdatetxtxt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08/09/2019"
            android:layout_margin="20dp"
            android:textSize="18sp"
            android:fontFamily="@font/amaranth"
            android:id="@+id/transdate"
            android:layout_toRightOf="@id/transdatetxtxt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount paid :"
            android:layout_margin="20dp"
            android:textSize="18sp"
            android:layout_below="@+id/transdatetxtxt"
            android:fontFamily="@font/amaranth"
            android:id="@+id/trasnamnttxt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:fontFamily="monospace"
            android:id="@+id/amntpaidtill"
            android:layout_toRightOf="@id/trasnamnttxt"
            android:layout_below="@id/transdate"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>