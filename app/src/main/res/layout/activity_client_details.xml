<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProjectDetails">

    <com.baoyz.widget.PullRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/refContainer">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client Name : "
                    android:textSize="20sp"
                    android:textColor="#2ecc72"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:id="@+id/statustxt"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#FF3E4D"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/statustxt"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/mStatus"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Number : "
                    android:textSize="20sp"
                    android:layout_below="@+id/statustxt"
                    android:fontFamily="sans-serif"
                    android:layout_margin="20dp"
                    android:textColor="#3498DB"
                    android:textStyle="bold"
                    android:id="@+id/myprojId"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif"
                    android:layout_margin="20dp"
                    android:id="@+id/id"
                    android:layout_below="@id/mStatus"
                    android:layout_toRightOf="@+id/myprojId"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address: "
                    android:textSize="20sp"
                    android:fontFamily="sans-serif"
                    android:layout_margin="20dp"
                    android:textColor="#3498DB"
                    android:textStyle="bold"
                    android:layout_below="@id/myprojId"
                    android:id="@+id/mypartyname"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="25dp"
                    android:id="@+id/myCname"
                    android:layout_below="@id/id"
                    android:layout_toRightOf="@+id/mypartyname"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email id : "
                    android:textSize="20sp"
                    android:layout_below="@+id/mypartyname"
                    android:id="@+id/accnotxt"
                    android:textColor="#3498DB"
                    android:textStyle="bold"
                    android:layout_margin="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    android:id="@+id/myaccno"
                    android:layout_marginTop="40dp"
                    android:layout_toRightOf="@+id/accnotxt"
                    android:layout_below="@+id/myCname"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number : "
                    android:textSize="20sp"
                    android:fontFamily="sans-serif"
                    android:layout_margin="20dp"
                    android:id="@+id/projDesc"
                    android:layout_below="@+id/accnotxt"
                    android:textColor="#3498DB"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="18sp"
                    android:layout_marginTop="40dp"
                    android:layout_below="@+id/myaccno"
                    android:layout_toRightOf="@+id/projDesc"
                    android:id="@+id/myPDesc"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Studio Name : "
                    android:layout_below="@id/myPDesc"
                    android:layout_margin="20dp"
                    android:textColor="#3498DB"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/mdatetxt"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/myPDesc"
                    android:layout_toRightOf="@+id/mdatetxt"
                    android:textSize="18sp"
                    android:layout_marginTop="22dp"
                    android:id="@+id/myDateBook"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount :"
                    android:textStyle="bold"
                    android:textColor="#3498DB"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/mdatetxt"
                    android:layout_marginLeft="20sp"
                    android:id="@+id/mdateComtxt"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/myDateBook"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000"
                    android:textSize="23sp"
                    android:layout_toRightOf="@+id/mdateComtxt"
                    android:layout_marginTop="40dp"
                    android:text="₹"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/myDateBook"
                    android:layout_marginLeft="40dp"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:layout_toRightOf="@+id/mdateComtxt"
                    android:layout_marginTop="40dp"
                    android:id="@+id/comdatetxt"/>

                <com.wang.avi.AVLoadingIndicatorView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:indicatorName="BallClipRotatePulseIndicator"
                    android:id="@+id/loader"
                    android:layout_marginTop="300dp"
                    android:layout_centerHorizontal="true"
                    app:indicatorColor="#30336B"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount paid till now : "
                    android:textStyle="bold"
                    android:textColor="#3498DB"
                    android:textSize="20sp"
                    android:layout_marginTop="50dp"
                    android:layout_below="@id/mdateComtxt"
                    android:layout_marginLeft="20sp"
                    android:id="@+id/mdateDel"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mdateDel"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="-28dp"
                    android:layout_toEndOf="@+id/mdateDel"
                    android:textSize="23sp"
                    android:text="₹"
                    />
                <TextView
                    android:id="@+id/deldatetxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mdateDel"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="-25dp"
                    android:layout_toEndOf="@+id/mdateDel"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount to be paid now : "
                    android:textStyle="bold"
                    android:textColor="#3498DB"
                    android:textSize="20sp"
                    android:layout_marginTop="50dp"
                    android:layout_below="@id/mdateDel"
                    android:layout_marginLeft="20sp"
                    android:id="@+id/mAmntNowtxt"/>

                <EditText
                    android:id="@+id/mAmntNow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deldatetxt"
                    android:layout_marginLeft="10dp"
                    android:hint="Amount.."
                    android:layout_marginTop="45dp"
                    android:layout_toEndOf="@+id/mAmntNowtxt"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount Remaining: "
                    android:textSize="20sp"
                    android:layout_below="@+id/mAmntNowtxt"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:textColor="#3498DB"
                    android:textStyle="bold"
                    android:id="@+id/deltotxt"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹"
                    android:textSize="23sp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:layout_below="@+id/mAmntNowtxt"
                    android:layout_toRightOf="@id/deltotxt"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mAmntNow"
                    android:layout_toRightOf="@id/deltotxt"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:id="@+id/deliveryto"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:layout_below="@id/deliveryto"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/saveDataBtn"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/round_btn"
                    android:layout_marginBottom="30dp"/>

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_attach_money_black_24dp"
                    android:layout_below="@+id/deliveryto"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#25CCF7"
                    android:id="@+id/fabtrans"/>

            </RelativeLayout>
        </ScrollView>
    </com.baoyz.widget.PullRefreshLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/cood"/>
</RelativeLayout>